
<%-include('../partials/header')%>
<%-include('../partials/navbar')%>
<%-include('../partials/flash')%>
    <h1 class="text-center"> your cart</h1>
    <div class="d-flex gap-5">
       <% for(let item of user.cart){ %>
            <div class="card mx-auto m-3">
                <div class="row">
                    <div class="col-4">
                        <img class="rounded-start" src="<%=item.img%>" alt="" style="height: 200px;width: 200px;">
                    </div>
                    
                </div>
                <div class="row">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=item.name%>
                        </h5>
                        <p class="card-text">
                            <%=item.desc%>
                        </p>
                        
                    </div>
                </div>
            </div>
      <%  } %>
</div>
<div class="col-lg-4 mx-auto"  style="border: 2px solid black;">
    <ul>
        <%for(let item of user.cart){%>
            <li>
                <span>
                    <%=item.name%> &nbsp; $ <%=item.price%>
                </span>
            </li>
            
        <%}%>
        <li>Total amount: <%=totalAmount%></li>
    </ul>
    <button class="btn btn-sm btn-success">checkout</button>
</div>
<script src="/js/common.js"></script>

  <%-include('../partials/footer')%>